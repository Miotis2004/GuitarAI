<Window x:Class="GuitarAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guitar AI" Height="500" Width="800"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Guitar AI" 
                   FontSize="32" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Device Selection -->
        <GroupBox Grid.Row="1" Header="Audio Devices" Padding="10" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Input Device -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Input:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          x:Name="InputDeviceComboBox"
                          Margin="0,0,0,10"/>

                <!-- Output Device -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Output:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Row="1" Grid.Column="1" 
                          x:Name="OutputDeviceComboBox"/>
            </Grid>
        </GroupBox>

        <!-- Controls -->
        <GroupBox Grid.Row="2" Header="Controls" Padding="10" Margin="0,0,0,20">
            <StackPanel>
                <!-- Start/Stop -->
                <Button x:Name="StartStopButton" 
                        Content="Start Audio Engine" 
                        Height="40" 
                        FontSize="16"
                        Click="StartStopButton_Click"
                        Margin="0,0,0,15"/>

                <!-- Volume Control -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Volume:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <Slider Grid.Column="1" 
                            x:Name="VolumeSlider"
                            Minimum="0" 
                            Maximum="2" 
                            Value="1"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                    <TextBlock Grid.Column="2" 
                               x:Name="VolumeLabel"
                               Text="100%" 
                               Width="50"
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"/>
                </Grid>

                <!-- Audio Level Meter -->
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Level:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ProgressBar Grid.Column="1" 
                                 x:Name="AudioLevelMeter"
                                 Height="20" 
                                 Minimum="0" 
                                 Maximum="1"
                                 Foreground="LimeGreen"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Status Log -->
        <GroupBox Grid.Row="3" Header="Status" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="StatusTextBlock" 
                           TextWrapping="Wrap"
                           FontFamily="Consolas"
                           FontSize="12"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Footer -->
        <TextBlock Grid.Row="4" 
                   Text="Guitar AI v0.1 - Audio Engine Test"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>